<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <span>({{format_url post_url}})</span>
    </div>
    {{#if "/single-post"}}
    {{contents}}
    {{/if}}
    <div class="meta">
        Created by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comment.length}} {{format_plural "comment" comment.length}}</a>
    </div>
</article>